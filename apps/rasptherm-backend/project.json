{
  "name": "rasptherm-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/rasptherm-backend/rasptherm_backend",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "apps/rasptherm-backend"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/rasptherm-backend",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run ruff check rasptherm_backend tests",
        "cwd": "apps/rasptherm-backend"
      },
      "configurations": {
        "fix": {
          "command": "poetry run ruff check --fix rasptherm_backend tests"
        }
      }
    },
    "format": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run ruff format rasptherm_backend tests",
        "cwd": "apps/rasptherm-backend"
      },
      "configurations": {
        "write": {
          "command": "poetry run ruff format rasptherm_backend tests"
        },
        "check": {
          "command": "poetry run ruff format --check rasptherm_backend tests"
        }
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run pytest tests",
        "cwd": "apps/rasptherm-backend"
      }
    },
    "typecheck": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run mypy --strict rasptherm_backend tests",
        "cwd": "apps/rasptherm-backend"
      }
    },
    "serve": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run uvicorn --env-file .env rasptherm_backend.main:app",
        "cwd": "apps/rasptherm-backend"
      }
    }
  },
  "tags": []
}
